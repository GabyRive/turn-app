<div id="log-in" class="col-md-4 col-xs-12">
  <div class="panel panel-default">
    <div class="panel-heading" id="panel-head1">
      <p id="thirdmain-p">Login</p>
    </div>
    <div class="panel-body" id="body-color">
      <h1 class="h1-login-turnapp">Log In</h1>
      <form class="form-signin">
        <div class="row">
          <fieldset class="form-group">
            <div id="email-login" class="col-xs-12">
              <input type="text" class="form-control input-bkg" placeholder="Email" required autofocus>
            </div>
          </fieldset>
        </div>
        <div class="row">
          <fieldset class="form-group">
            <div class="col-xs-12">
              <input type="password" class="form-control input-bkg" placeholder="Password" required>
            </div>
          </fieldset>
        </div>
        <div class="row">
          <fieldset class="form-group">
            <div id="sign-in-button" class="col-md-6 col-md-offset-3">
              <a href="#" class="sign-in-btn btn btn-lg btn-primary btn-block sign-in-button">
                  Log In
              </a>
            </div>
          </fieldset>
        </div>
        <div class="row">
          <div id="check-box" class="col-md-6 col-md-offset-3">
            <label class="checkbox">
              <span id="rememberme"><input  type="checkbox" value="remember-me"> Remember me
          </label></span>
          </div>
        </div>
        <div class="row">
          <fieldset class="form-group">
            <div id="need-help" class="col-md-6 col-md-offset-3">
              <a class="ach-turn" href="#">Need help? </a>
            </div>
            <div id="create-account" class="col-md-6 col-md-offset-3">
              <a class="ach-turn" href="#">Create an account </a>
            </div>
          </fieldset>
        </div>
      </form>
    </div>
  </div>
</div>
