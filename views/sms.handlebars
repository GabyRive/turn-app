<div class="row" style="margin-top: 200px;">
  <form class="col-sm-6 col-sm-offset-3" action="/sms" method="post">
    <div class="form-group">
        <label for="exampleInputEmail1">Email address</label>
        <input type="text" class="form-control" id="patient" aria-describedby="recordHelp" placeholder="Enter patient's record number.">
        <small id="recordHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
    </div>

    <div class="form-group">
        <textarea id="txtmsg" name="txtmsgg" rows="6" cols="60" disabled>
        {{msg}}
      </textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</div>
